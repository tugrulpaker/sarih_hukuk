@using Sarih_Law.Models
@model List<Yorumlar>
@{
    ViewData["Title"] = "YorumListesi";
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kullanıcı</th>
        <th>Mail</th>
        <th>Yorum</th>
        <th>Blog</th>
        <th>Sil</th>
        <th>Guncelle</th>

    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.KullaniciAdi</td>
            <td>@x.Mail</td>
            <td>@x.Yorum</td>
            <td>@x.Blogid</td>
            <td><a href="/Adminler/YorumSil/@x.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Adminler/YorumGetir/@x.ID" class="btn btn-warning">Guncelle</a></td>

        </tr>

    }

</table>